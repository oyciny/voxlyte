form(action='/contact' method='post')
    .input-container
        p.label name
        input(type='text' name='name' required)
    .input-container
        p.label email
        input(type='email' name='email' required)
    .input-container
        p.label message
        textarea(name='message' required)
    .input-container
        input(type='submit' value='get in touch').submit#submit